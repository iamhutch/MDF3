<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lucyhutcheson.christmascountdown"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.NFC"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.lucyhutcheson.christmascountdownwidget.WidgetConfigActivity"
            android:label="Configure Countdaown Date">
            <intent-filter>
                <action android:name="android.app.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <service android:name="com.lucyhutcheson.christmascountdownwidget"></service>
        <receiver android:name="com.lucyhutcheson.christmascountdownwidget.ChristmasCountdownAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/christmascountdown_widget" />
        </receiver>
    </application>

</manifest>